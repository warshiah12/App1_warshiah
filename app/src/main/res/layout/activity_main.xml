<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvbmi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginVertical="1dp"
       android:elegantTextHeight="true"
       android:text="Calculate your BMI"
       android:textAlignment="center"
       android:textAppearance="@style/Widget.AppCompat.AutoCompleteTextView"
       android:textColor="#fff"
       android:textSize="44sp" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginHorizontal="39dp"
       android:layout_marginVertical="17dp"
       android:text="Weight (Kg) "
       android:textSize="23dp" />

   <EditText
       android:id="@+id/W"
       android:layout_width="323dp"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:background="@drawable/edit_text"
       android:hint="00"
       android:inputType="numberDecimal"
       android:padding="12dp" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginHorizontal="39dp"
       android:layout_marginVertical="17dp"
       android:text="Height (cm) : "
       android:textSize="23dp" />

   <EditText
       android:id="@+id/H"
       android:layout_width="323dp"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginHorizontal="25dp"
       android:background="@drawable/edit_text"
       android:hint="00"
       android:inputType="numberDecimal"
       android:padding="12dp" />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="13dp"
       android:text="Your BMI  "
       android:layout_gravity="center"
       android:textAlignment="center"
       android:textAllCaps="false"
       android:textSize="25sp" />

   <androidx.cardview.widget.CardView
       android:layout_width="323dp"
       android:layout_height="190dp"
       android:id="@+id/cv"
       app:cardBackgroundColor="#03989E"
       app:cardCornerRadius="20dp"
       app:cardElevation="13dp"
       app:cardMaxElevation="13dp" >

      <TextView
          android:id="@+id/calc_result"
          android:layout_width="wrap_content"
          android:layout_height="90dp"
          android:layout_marginHorizontal="20sp"
          android:layout_marginTop="20dp"
          android:width="355dp"
          android:height="19dp"
          android:background="#03989E"
          android:gravity="center"
          android:textAlignment="center"
          android:textColor="#fff"
          android:textSize="70sp"  />

      <TextView
          android:id="@+id/statement"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAllCaps="true"
          android:layout_marginTop="135dp"
          android:textSize="30sp"
          android:textAlignment="center"
          android:textStyle="bold"/>


   </androidx.cardview.widget.CardView>

   <Button
       android:id="@+id/find"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginHorizontal="79dp"
       android:layout_marginVertical="19dp"
       android:background="@drawable/button"
       android:text="CALCULATE"
       android:textColor="#fff" />
   <Button
       android:id="@+id/about"
       android:layout_width="350dp"
       android:layout_height="wrap_content"
       android:layout_marginHorizontal="79dp"
       android:layout_marginVertical="1dp"
       android:background="@drawable/button"
       android:text="What's a BMI Calculator"
       android:textColor="#fff" />

</LinearLayout>